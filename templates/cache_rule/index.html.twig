{% extends 'base.html.twig' %}

{% block title %}CacheRule index{% endblock %}

{% block body %}
    <h1>CacheRule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Cond</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cache_rule in cache_rules %}
            <tr>
                <td>{{ cache_rule.id }}</td>
                <td>{{ cache_rule.type }}</td>
                <td>{{ cache_rule.cond }}</td>
                <td>
                    <a href="{{ path('app_cache_rule_show', {'id': cache_rule.id}) }}">show</a>
                    <a href="{{ path('app_cache_rule_edit', {'id': cache_rule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cache_rule_new') }}">Create new</a>
{% endblock %}
